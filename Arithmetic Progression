#include<iostream>
#include<cmath>
using namespace std;

int main()
{
	ios_base::sync_with_stdio(false); 
    cin.tie(NULL);
	int t;
	cin>>t;
	while(t!=0)
	{
		int a,b,c;
		float ans;
		cin>>a>>b>>c;
		int diff1=b-a;
		int diff2=c-b;
		if(diff1==diff2)
		{
			cout<<"0"<<"\n";
		}
		else
		{
			ans=diff1-diff2;
			ans=abs(ans)/2;
			cout<<ceil(ans)<<"\n";
		}
		--t;
	}
}
